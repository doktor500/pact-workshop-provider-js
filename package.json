{
  "name": "payment-service-provider",
  "version": "1.0.0",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "node .",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "clearMocks": true
  },
  "devDependencies": {
    "@pact-foundation/pact": "^9.5.0",
    "@pact-foundation/pact-node": "^10.2.2",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.14",
    "ts-jest": "^22.4.6",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@pact-foundation/pact": "^9.5.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "supertest": "^4.0.2"
  }
}
